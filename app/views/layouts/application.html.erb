<!DOCTYPE html>
<html>
  <head>
    <title>OwenTasks</title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>
       <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}"%>
      <% end %> 
      <section>
	<%= yield %>
      </section>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
